{% extends "base.html.twig" %}

{% block title %}PHP Url Shortener{% endblock %}
{% block h1_header %}<a href="/" class="no-underline">PHP Url Shortener</a>{% endblock %}

{% block content %}
    <form name="url-shortener"
          method="post"
          action="/">
        <div>
            {% if success == true %}
                <div class="success">
                    <span>{{ longUrl }}</span>
                    <span class="text-right">
                        <a href="{{ base_url }}/{{ shortUrl }}">{{ base_url }}/{{ shortUrl }}</a>
                    </span>
                </div>
            {% endif %}
            <div>
                <div>
                    <label class="font-bold text-2xl" for="phone-number">Enter a URL to shorten:</label>
                    <div class="mt-1">
                        {% if errors.url is defined %}
                            {% for error in errors.url %}
                            <div class="error">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                        <input type="url"
                               name="url"
                               id="url"
                               class="w-full p-3 {% if errors.url is defined %}input-error{% endif %}"
                               value="{{ values.url }}">
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-2">
            <input type="submit"
                   name="submit"
                   value="Shorten the URL">
            <input type="reset"
                   name="reset"
                   value="Cancel">
        </div>
    </form>
{% endblock %}